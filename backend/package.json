{
  "name": "notespot-backend",
  "version": "1.0.0",
  "description": "Open source notes sharing platform",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsup index.ts --format cjs --sourcemap && cp .env dist/",
    "build:lambda": "tsup lambda.ts --format cjs --sourcemap",
    "start": "node dist/index.js",
    "dev": "nodemon --exec \"tsx\" index.ts",
    "dev:lambda": "serverless offline",
    "debug": "tsx --inspect=0.0.0.0:2000 index.ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build:lambda && serverless deploy",
    "deploy:dev": "npm run build:lambda && serverless deploy --stage dev",
    "remove": "serverless remove"
  },
  "author": "Laeek Ahmed Shaikh",
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.873.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.873.0",
    "@aws-sdk/client-s3": "^3.627.0",
    "@aws-sdk/client-sts": "^3.817.0",
    "@aws-sdk/lib-storage": "^3.627.0",
    "@aws-sdk/s3-request-presigner": "^3.830.0",
    "@clerk/backend": "^2.3.0",
    "@clerk/express": "^1.7.2",
    "@codegenie/serverless-express": "^4.12.0",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/method-override": "^3.0.0",
    "@types/node": "^22.15.24",
    "@types/uuid": "^10.0.0",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^8.1.0",
    "method-override": "^3.0.0",
    "mongoose": "^6.5.1",
    "morgan": "^1.10.1",
    "serverless": "^4.18.2",
    "serverless-offline": "^14.4.0",
    "typescript": "^5.8.3",
    "uuid": "^8.3.2",
    "winston": "^3.17.0",
    "winston-cloudwatch": "^6.3.0"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "@types/winston": "^2.4.4",
    "nodemon": "^3.1.10",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4"
  }
}