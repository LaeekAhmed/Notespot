<h2 class="page-header"><i class="bi bi-file-earmark-pdf"></i> <%= book.title %></h2>
<div class="book-details">
  <div>
    <img class="book-cover" src="<%= book.coverImagePath %>" height='220' width="160">
  </div>
  <div class="book-details-grid">
    <div class="book-details-label">Author:</div>
    <div><i class="bi bi-person"></i> <%= author.name %></div>
    <div class="book-details-label">Publish Date:</div>
    <div><i class="bi bi-folder-plus"></i> <%= book.publish_date != null ? book.publish_date.toDateString() : "-" %></div>
    <div class="book-details-label">Description:</div>
    <div><%= book.description=="" ? "-" : book.description  %></div><br>
    <div class="book-details-label">Please scroll down to view the document ‚è¨</div>
  </div>
</div>
<%- include('../partials/deleteForm', { url: `/books/${book.id}` }) %>
<a class="btn btn-primary book-details-author-button" href="/authors/<%= book.author %>">View Author</a>
